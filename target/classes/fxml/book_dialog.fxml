<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.controller.BookDialogController"
          hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    
    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <Label text="Publication Year:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #666; -fx-text-fill: white;"/>
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</GridPane> 